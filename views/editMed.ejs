<div class="container">
  <h3>
    <p style="color:#a94864;font-size:120%;text-align: center;font-weight:700;">Edit Your Medication</p>
  </h3>
  <br>
  <form action="/editMed/<%=med._id%>" method="post">
      <div class="form-group">
        <label for="name">Name of Medication</label>
        <input type="text" name="name" value=" <%= med.name %>" class=" form-control">
      </div>
      <div class="form-group">
        <label for="dose">Dose</label>
        <input type="text" name="dose" value="<%= med.dose %>"" placeholder="e.g. 5mg" class=" form-control">
      </div>
      <div class="form-group">
        <label for="time">Time</label>
        <select class="form-control" name="time">
                    <option value="">Any Time</option>
                    <option value="Morning">Morning</option>
                    <option value="Afternoon">Afternoon</option>
                    <option value="Evening">Evening</option>
                    <option value="Night">Night</option>
                    <option value="PRN">PRN</option>
                  </select>
      </div>

      <div>
        <h5>Note</h5>
        <textarea name="note" rows="2" cols="20"> <%= med.note %></textarea>
      </div>
      <br>



      <br>
      <input class="button" type="submit" value="Submit">
      <br>
    </form>
   <br>
   <br>
</div>
