<div class="container">
  <h1>Your Profile</h1>


<hr>
<a href="editProfile">Edit</a>
<hr>
<div class="row">
  <div class="col-sm-6">
    <% if (user.imageURL === "") { %>
      <img src="/images/blank-profile-picture.png" alt="image of user">
    <% }else{ %>
      <img src="<%= user.imageURL %>" alt="image of user">
    <% } %>
  </div>
  <div class="col-sm-6">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td>Google Name</td>
            <td><%= user.googlename %> </td>
          </tr>
          <tr>
            <td>Email</td>
            <td><%= user.googleemail %> </td>
          </tr>
          <tr>
            <td>Preferred Name</td>
            <td><%= user.username %> </td>
          </tr>
          <tr>
            <td>Age</td>
            <td><%= user.age %> </td>
          </tr>
          <tr>
            <td>Phone</td>
            <td><%= user.phone %> </td>
          </tr>
          <tr>
            <td>Address</td>
            <td><%= user.address %> </td>
          </tr>
        </tbody>
      </table>
      <ul>
        <li><a href="/showFilteredNotes">View My Medication</a></li>
        <li><a href="/showFavorites">My caretakers</a></li>
      </ul>
  </div>

</div>
</div>
